
<MyForm>:      # 定义MyForm类
    orientation:"vertical"    # 定义orientation属性的值
    text_input:text_box       # 定义用于外部引用的名称，指向id为text_box的GUI部件
    btnc_chg:btnc

    BoxLayout:                # 定义子GUI部件
        height:"40dp"         # 高度
        size_hint_y:None      # 纵向占比

        TextInput:
            id:text_box
            size_hint_x:50  # 横向占比（多个同级GUI部件的占比比例来分配实际大小）

        Button:
            text:"Button A"
            size_hint_x:20
            on_press:root.buttona_act()   # 指定Button被按下时执行的方法

        Button:
            text:"Button B"
            size_hint_x:20

        Button:
            text:"Button C"
            size_hint_x:10
            id:btnc

<MyForm2>:
    btnd_chg:btnd
    Button:
        text:"Button D"
        id:btnd
       